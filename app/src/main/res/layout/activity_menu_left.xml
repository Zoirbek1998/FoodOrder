<?xml version="1.0" encoding="utf-8"?>
<nl.psdcompany.duonavigationdrawer.views.DuoDrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Activity.MenuLeftActivity">

    <nl.psdcompany.duonavigationdrawer.views.DuoMenuView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:tag="menu">

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical"

            >

            <TextView
                android:layout_width="match_parent"
                android:layout_height="@dimen/size_130dp"
                android:fontFamily="@font/amita"
                android:gravity="center"
                android:text="Sizzling Bitles"
                android:textColor="@color/black"
                android:textSize="@dimen/text_30sp" />

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:orientation="horizontal">

                <androidx.cardview.widget.CardView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    app:cardElevation="@dimen/size_20dp"
                    >

                    <de.hdodenhof.circleimageview.CircleImageView
                        android:layout_width="@dimen/size_100dp"
                        android:layout_height="@dimen/size_100dp"
                        android:layout_marginLeft="@dimen/size_30dp"
                        android:src="@drawable/ic_baseline_camera_enhance_24" />

                </androidx.cardview.widget.CardView>

                <LinearLayout
                    android:layout_width="@dimen/size_0dp"
                    android:layout_height="wrap_content"
                    android:layout_weight="1"
                    android:orientation="vertical">

                    <TextView
                        android:id="@+id/cricle_name"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:fontFamily="@font/amita"
                        android:text="Zoirbek"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_20dp" />

                    <TextView
                        android:id="@+id/circle_phone"
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:layout_marginHorizontal="16dp"
                        android:fontFamily="@font/amita"
                        android:text="+998916119878"
                        android:textColor="@color/black"
                        android:textSize="@dimen/size_20dp" />

                </LinearLayout>

            </LinearLayout>

            <LinearLayout
                android:id="@+id/home_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_24dp"
                android:layout_marginTop="@dimen/size_50dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_home_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="16dp"
                    android:fontFamily="@font/amita"
                    android:text="Home"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_24sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/profile_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_24dp"
                android:layout_marginTop="@dimen/size_24dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_person_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="16dp"
                    android:fontFamily="@font/amita"
                    android:text="Profile"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_24sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/restaurant_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_24dp"
                android:layout_marginTop="@dimen/size_24dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_restaurant_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/size_16dp"
                    android:fontFamily="@font/amita"
                    android:text="Nearby Restaurants"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_24sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/setting_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_24dp"
                android:layout_marginTop="@dimen/size_24dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_settings_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/size_16dp"
                    android:fontFamily="@font/amita"
                    android:text="Settins"
                    android:textColor="@color/black"
                    android:textSize="@dimen/text_24sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/abbauts_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_24dp"
                android:layout_marginTop="@dimen/size_24dp"
                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_error_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/size_16dp"
                    android:fontFamily="@font/amita"
                    android:text="Home"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_24sp" />

            </LinearLayout>

            <LinearLayout
                android:id="@+id/logaut_id"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginHorizontal="@dimen/size_24dp"
                android:layout_marginTop="@dimen/size_24dp"

                android:orientation="horizontal">

                <ImageView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:src="@drawable/ic_baseline_logout_24" />

                <TextView
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:layout_gravity="center_vertical"
                    android:layout_marginHorizontal="@dimen/size_16dp"
                    android:fontFamily="@font/amita"
                    android:text="Home"
                    android:textColor="@color/white"
                    android:textSize="@dimen/text_24sp" />

            </LinearLayout>
        </LinearLayout>


    </nl.psdcompany.duonavigationdrawer.views.DuoMenuView>

    <androidx.cardview.widget.CardView

        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:tag="content"
        app:cardElevation="1000dp">

        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="@dimen/size_60dp">

                <FrameLayout
                    android:id="@+id/from"
                    android:layout_width="match_parent"
                    android:layout_height="match_parent" />

            </LinearLayout>

            <androidx.appcompat.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                />

        </RelativeLayout>
    </androidx.cardview.widget.CardView>

</nl.psdcompany.duonavigationdrawer.views.DuoDrawerLayout>