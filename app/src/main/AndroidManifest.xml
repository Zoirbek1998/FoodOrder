<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.example.foodorder2">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@drawable/logo_food"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/Theme.FoodOrder2">
        <activity android:name=".Activity.CommentActivity"></activity>
        <activity android:name=".Activity.SearchActivity" />
        <activity android:name=".Activity.FioActivity" />
        <activity android:name=".Activity.CartActivity" />
        <activity android:name=".Activity.MenuLeftActivity" />
        <activity android:name=".Activity.SignUpActivity" />
        <activity android:name=".Activity.IntroductoryActivity">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity android:name=".Activity.SignInActivity" />

        <meta-data
            android:name="preloaded_fonts"
            android:resource="@array/preloaded_fonts" />
    </application>

</manifest>